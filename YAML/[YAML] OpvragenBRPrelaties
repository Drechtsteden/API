swagger: '2.0'
info:
  description: Specificatie StUF Json opvragen persoonsgegevens
  version: 1.0.0
  title: nps
  contact: {}
host: zaaksysteem.greenvalley.nl
basePath: /bg
schemes:
  - http
consumes:
  - application/json
produces:
  - application/json
paths:
  '/natuurlijkpersoon/{bsn}':
    get:
      summary: opvragen persoonsgegevens
      description: 'Vraagt de gegevens van een natuurlijk persoon op.'
      produces:
        - application/json
      parameters:
        - name: zender
          in: header
          required: false
          type: string
        - name: ontvanger
          in: header
          required: false
          type: string
        - name: parameters
          in: header
          required: false
          type: string
        - name: referentienummer
          in: header
          required: false
          type: string
        - name: tijdstipbericht
          in: header
          required: false
          type: string
        - name: crossRefnummer
          in: header
          required: false
          type: string
        - name: entiteittype
          in: header
          required: false
          type: string
      responses:
        '200':
          description: Gelukt
          schema:
            type: object
            properties:
              persoon:
                $ref: '#/definitions/IngeschrevenPersoon'
    parameters:
      - name: bsn
        in: path
        required: true
        type: string
  /natuurlijkpersoon/findbyPersoon:
    get:
      summary: zoeken op persoonsgegevens
      description: 'Zoekt een collectie van personen '
      produces:
        - application/json
      parameters:
        - name: achternaam
          in: query
          required: false
          type: string
        - name: geboortedatum
          in: query
          required: false
          type: string
        - name: voorletters
          in: query
          required: false
          type: string
      responses:
        '200':
          description: Gelukt
          schema:
            type: object
            properties:
              persoon:
                $ref: '#/definitions/IngeschrevenPersoon'
definitions:
  IngeschrevenPersoon:
    type: object
    properties:
      kinderen:
        type: array
        items:
          $ref: '#/definitions/NatuurlijkPersoon'
      ouders:
        type: array
        items:
          $ref: '#/definitions/NatuurlijkPersoon'
      partners:
        type: array
        items:
          $ref: '#/definitions/NatuurlijkPersoon'
  NatuurlijkPersoon:
    type: object
    properties:
      bsn:
        type: string
        description: burgerservicenummer
        minLength: 8
        maxLength: 9
      burgerlijkeStaat:
         type: string
         enum:
         - Gehuwd
         - Alleenstaand
         - etc
      geslachtsnaam:
        type: string
        maxLength: 200
      voorvoegselGeslachtsnaam:
        type: string
        maxLength: 10
      voorletters:
        type: string
        maxLength: 20
      voornamen:
        type: string
        maxLength: 200
      geslachtsaanduiding:
        type: string
        enum:
            - V
            - M
            - O
      geboortedatum:
        type: integer
        maxLength: 8
        description: 'datum kan onvolledig zijn, daarom integer'
      verblijfsAdres:
        type: object
        properties:
          aoaAdres:
            $ref: '#/definitions/AOAobject'
          buitenlandsAdres:
            $ref: '#/definitions/BuitenlandsAdres'
  AOAobject:
    type: object
    properties:
      aoa.identificatie:
        type: number
      postcode:
        type: string
        minLength: 6
        maxLength: 6
        pattern: 9999NN
      huisnummer:
        type: integer
        minimum: 1
      huisletter:
        type: string
      huisnummertoevoeging:
        type: string
      openbareRuimteNaam:
        type: string
      straatnaam:
        type: string
      wpl.identificatie:
        type: string
      wpl.woonplaatsNaam:
        type: string
  BuitenlandsAdres:
    type: object
    properties:
      landnaam:
        type: string
      landcode:
        type: integer
      buitenlandsadres1:
        type: string
      buitenlandsadres2:
        type: string
      buitenlandsadres3:
        type: string
